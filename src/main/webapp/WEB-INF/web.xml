<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Servl</servlet-name>
        <servlet-class>controller.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servl</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>



    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>controller.filter.LocaleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <url-pattern>/views/*</url-pattern>
    </filter-mapping>

    <absolute-ordering>
        <name>AccessFilter</name>
        <name>LocaleFilter</name>
    </absolute-ordering>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>controller.filter.AccessFilter</filter-class>
        <init-param>
            <param-name>allowed-urls</param-name>
            <param-value>/login,/registration,/login_submit,/show_registration,
                /info_page,/error</param-value>
        </init-param>
        <init-param>
            <param-name>cashier-urls</param-name>
            <param-value>/cashier_page,/create_invoice,/log_out,/find_product</param-value>
        </init-param>
        <init-param>
            <param-name>senior-cashier-urls</param-name>
            <param-value>/senior_cashier_list,/delete,/log_out,/confirm_invoice,/delete_invoice,/bills_page,/x_report,/y_report,/confirm_bill,/cancel_bill</param-value>
        </init-param>
        <init-param>
            <param-name>manager-urls</param-name>
            <param-value>/manager_page,/log_out,/create_update,/show_create,/show_create,/bills_page</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>Servl</servlet-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>




</web-app>